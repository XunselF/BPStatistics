<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.xunself.bpstatistics">

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/bps_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bps_circle_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingActivity" />
        <activity android:name=".AboutAppActivity" />
        <activity android:name=".SettingPriceActivity" />
        <activity android:name=".BoxInfoActivity" />
        <activity android:name=".InquirePriceActivity" />
        <activity android:name=".SelectBoxActivity" />
        <activity android:name=".AddCustomerActivity" />
        <activity android:name=".SelectCustomerActivity" />
        <activity android:name=".AboutCustomerActivity" />
        <activity android:name=".AboutWorkActivity"></activity>
    </application>

</manifest>